<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/connection_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connection Status: Not Connected"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/client_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Client State: Disconnected"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/data_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Received Data:"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/received_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Received data will appear here"
        android:inputType="text"
        android:focusable="false"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/input_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter data to send"
        android:inputType="text"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/send_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Data"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/advertising_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Advertising"
        android:layout_marginBottom="16dp"/>

</LinearLayout>



